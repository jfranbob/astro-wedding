---
// Componente Gallery.astro
// Lista de imágenes como ejemplo, reemplázalas con tus propias imágenes.
const images = [
    "/path/to/image1.jpg",
    "/path/to/image2.jpg",
    "/path/to/image3.jpg",
    "/path/to/image4.jpg",
    // Agrega más imágenes según sea necesario
];
---

<div class="gallery">
    {
        images.map((image) => (
            <div class="gallery-item">
                <img src={image} alt="Imagen de la galería" loading="lazy" />
            </div>
        ))
    }
</div>

<style>
    .gallery {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 15px;
        padding: 20px;
    }

    .gallery-item img {
        width: 100%;
        height: auto;
        border-radius: 8px;
        object-fit: cover;
    }
</style>
